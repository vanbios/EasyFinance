<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:paddingTop="@dimen/common_padding_large"
    android:paddingLeft="@dimen/common_padding_medium"
    android:paddingStart="@dimen/common_padding_medium"
    android:paddingRight="@dimen/common_padding_medium"
    android:paddingEnd="@dimen/common_padding_medium">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardAddTransBTWAccountsElements"
        card_view:cardElevation="@dimen/card_elevation_medium"
        card_view:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_padding_large"
            android:paddingStart="@dimen/common_padding_large"
            android:paddingRight="@dimen/common_padding_large"
            android:paddingEnd="@dimen/common_padding_large"
            android:paddingBottom="@dimen/common_padding_medium">



                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:id="@+id/ivAddTransBTWSum"
                    android:src="@drawable/ic_coin_stacks_cyan_48dp"
                    android:contentDescription="@string/sum_hint"

                    android:layout_marginTop="32dp"/>



                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="6"
                    android:id="@+id/editTextTransBTWSum"
                    android:hint="@string/sum_hint"
                    android:maxLength="15"
                    style="@style/TitleBigFont"

                    android:layout_marginTop="@dimen/common_padding_large"
                    android:layout_centerHorizontal="true"

                    android:gravity="center_horizontal"/>




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/cvAddTransBTWDivider"
                android:layout_below="@+id/editTextTransBTWSum"
                android:background="@color/custom_divider"
                android:layout_marginLeft="68dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="64dp"/>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linLayoutAddTransBTWAccountFrom"
                android:layout_below="@+id/cvAddTransBTWDivider"
                android:baselineAligned="false"

                android:gravity="center_vertical">


                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:id="@+id/ivAddTransBTWAccountFrom"
                    android:src="@drawable/ic_outcome_red_48dp"
                    android:contentDescription="@string/account"
                    android:layout_marginRight="40dp"
                    android:layout_marginEnd="40dp" />


                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/spinAddTransBTWAccountFrom"
                    android:spinnerMode="dialog"
                    android:prompt="@string/account_from" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linLayoutAddTransBTWAccountFrom"
                android:background="@color/custom_divider"
                android:layout_marginLeft="68dp"
                android:layout_marginStart="68dp" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linLayoutAddTransBTWAccountTo"
                android:layout_below="@+id/linLayoutAddTransBTWAccountFrom"
                android:baselineAligned="false"

                android:gravity="center_vertical">


                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:id="@+id/ivAddTransBTWAccountTo"
                    android:src="@drawable/ic_income_green_48dp"
                    android:contentDescription="@string/account"
                    android:layout_marginRight="40dp"
                    android:layout_marginEnd="40dp" />


                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/spinAddTransBTWAccountTo"
                    android:spinnerMode="dialog"
                    android:prompt="@string/account_to" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/cvAddTransBTWDividerExchange"
                android:layout_below="@+id/linLayoutAddTransBTWAccountTo"
                android:background="@color/custom_divider"
                android:layout_marginLeft="68dp"
                android:layout_marginStart="68dp"

                android:visibility="gone"/>


            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:id="@+id/ivAddTransBTWExchange"
                android:src="@drawable/ic_exchange_cyan_dark_48dp"
                android:contentDescription="@string/account"
                android:layout_below="@+id/cvAddTransBTWDividerExchange"

                android:layout_marginTop="32dp"

                android:visibility="gone"/>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="3"
                android:id="@+id/editTextTransBTWExchange"
                android:hint="@string/exchange_hint"
                android:maxLength="12"
                style="@style/TitleFont"

                android:layout_below="@+id/cvAddTransBTWDividerExchange"

                android:layout_marginTop="@dimen/common_padding_large"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"

                android:layout_marginBottom="@dimen/common_padding_large"

                android:visibility="gone"/>




        </RelativeLayout>

    </android.support.v7.widget.CardView>

</ScrollView>
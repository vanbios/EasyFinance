<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar_height">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_shadow_height"
            android:background="@drawable/toolbar_drop_shadow" />
    </FrameLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/margin_big_card_top"

        android:paddingLeft="@dimen/common_padding_medium"
        android:paddingStart="@dimen/common_padding_medium"
        android:paddingRight="@dimen/common_padding_medium"
        android:paddingEnd="@dimen/common_padding_medium"

        android:scrollbars="none">




        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/cardAddDebtElements"

            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="@dimen/card_elevation_medium">





            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_padding_large"
                android:paddingStart="@dimen/common_padding_large"
                android:paddingRight="@dimen/common_padding_large"
                android:paddingEnd="@dimen/common_padding_large"
                android:paddingBottom="30dp">



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linLayoutAddDebtName"
                    android:baselineAligned="false"
                    android:layout_marginTop="@dimen/common_padding_large"

                    android:gravity="center_vertical">


                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:id="@+id/ivAddDebtName"
                        android:src="@drawable/ic_clipboard_text_cyan_dark_48dp"
                        android:contentDescription="@string/debt_name_hint"

                        android:layout_marginRight="38dp"
                        android:layout_marginEnd="38dp" />



                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editTextDebtName"
                        android:maxLength="50"
                        android:hint="@string/debt_name_hint"

                        android:singleLine="true"

                        style="@style/TitleFont" />


                </LinearLayout>




                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/cvAddDebtDividerTop"
                    android:layout_below="@+id/linLayoutAddDebtName"
                    android:background="@color/custom_divider"
                    android:layout_marginLeft="68dp"
                    android:layout_marginStart="68dp"
                    android:layout_marginTop="40dp"/>




                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linLayoutAddDebtType"
                    android:layout_below="@+id/cvAddDebtDividerTop"
                    android:baselineAligned="false"

                    android:gravity="center_vertical">


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/spinAddDebtType"
                        android:prompt="@string/debt_type"

                        android:layout_marginLeft="60dp"
                        android:layout_marginStart="60dp"/>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/linLayoutAddDebtType"
                    android:background="@color/custom_divider"
                    android:layout_marginLeft="68dp"
                    android:layout_marginStart="68dp" />


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linLayoutAddDebtAccount"
                    android:layout_below="@+id/linLayoutAddDebtType"
                    android:baselineAligned="false"

                    android:gravity="center_vertical">


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/spinAddDebtAccount"
                        android:spinnerMode="dialog"
                        android:prompt="@string/account" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/cvAddDebtDividerBottom"
                    android:layout_below="@+id/linLayoutAddDebtAccount"
                    android:background="@color/custom_divider"
                    android:layout_marginLeft="68dp"
                    android:layout_marginStart="68dp" />




                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:id="@+id/ivAddDebtSum"
                    android:src="@drawable/ic_coin_stacks_cyan_48dp"
                    android:layout_below="@+id/cvAddDebtDividerBottom"
                    android:contentDescription="@string/sum_hint"
                    android:layout_marginTop="36dp" />



                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="6"
                    android:hint="@string/sum_hint"
                    android:maxLength="15"
                    android:id="@+id/editTextDebtSum"
                    android:layout_centerHorizontal="true"

                    android:gravity="center_horizontal"

                    android:layout_marginTop="24dp"

                    android:layout_below="@+id/cvAddDebtDividerBottom"
                    android:singleLine="true"
                    style="@style/TitleFont" />


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linLayoutAddDebtDate"
                    android:layout_below="@+id/editTextDebtSum"

                    android:gravity="center_vertical"

                    android:baselineAligned="false">


                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:id="@+id/ivAddDebtDate"
                        android:src="@drawable/ic_calendar_cyan_48dp"
                        android:contentDescription="@string/date" />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:id="@+id/tvAddDebtDate"
                        android:clickable="true"
                        style="@style/SpinnerFont"
                        android:gravity="center"/>


                </LinearLayout>



            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>

    </RelativeLayout>
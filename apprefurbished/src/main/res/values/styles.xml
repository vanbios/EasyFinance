<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/custom_blue_gray</item>
        <item name="colorPrimaryDark">@color/custom_blue_gray_dark</item>
        <item name="colorAccent">@color/custom_cyan_dark</item>

    </style>


    <style name="ThemeOverlay.CustomToolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/custom_blue_gray</item>
        <item name="android:textColor">@color/custom_text_light</item>
    </style>


    <style name="TitleFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/custom_text_gray_dark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>


    <style name="TitleFontSecondary" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/custom_text_secondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>


    <style name="BodyFontSecondary" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/custom_text_secondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>


    <style name="CaptionFontSecondary" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/custom_text_secondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>


    <style name="SpinnerFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_spinner</item>
        <item name="android:textColor">@color/custom_text_gray_dark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>


    <style name="SubheadFontSecondary" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:textColor">@color/custom_text_secondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>


    <style name="SubheadFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:textColor">@color/custom_text_gray_dark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>


    <style name="TitleBigFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/custom_text_gray_dark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="TabsFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
    </style>

</resources>

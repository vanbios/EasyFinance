<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/bottomNavContainer"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/navigationBarMain"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/bottom_nav_graph" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationBarMain"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:itemPaddingBottom="12dp"
        app:itemPaddingTop="6dp"
        app:itemTextAppearanceActive="?textAppearanceLabelSmall"
        app:itemTextAppearanceInactive="?textAppearanceLabelSmall"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation_main_menu" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnFloatMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_padding_large"
        android:layout_marginBottom="@dimen/common_padding_large"
        android:clickable="true"
        android:focusable="true"
        android:tint="@color/general_surface"
        app:backgroundTint="@color/custom_cyan_dark"
        app:fabCustomSize="@dimen/fab_regular_size"
        app:layout_constraintBottom_toTopOf="@id/navigationBarMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_plus_white_48dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
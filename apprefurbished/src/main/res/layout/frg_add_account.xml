<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutActAccountParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/common_padding_large"
    android:paddingLeft="@dimen/common_padding_medium"
    android:paddingRight="@dimen/common_padding_medium"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAddAccountElements"
            style="?attr/materialCardViewElevatedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_padding_xlarge"
            app:cardBackgroundColor="@color/general_surface"
            app:cardElevation="@dimen/elevation_small"
            app:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_padding_xlarge"
                android:paddingTop="@dimen/common_padding_xlarge"
                android:paddingRight="@dimen/common_padding_xlarge"
                android:paddingBottom="32dp">

                <TextView
                    android:id="@+id/tvAddAccountAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:textColor="@color/custom_text_gray_dark"
                    android:textSize="36sp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="5 000 000,00" />

                <TextView
                    android:id="@+id/tvAddAccountName"
                    style="@style/BodyFontSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAddAccountAmount"
                    android:layout_marginTop="32dp"
                    android:text="@string/name"
                    android:textAllCaps="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvAddAccountAmount" />

                <View
                    android:id="@+id/cvAddAccountDividerName"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tvAddAccountName"
                    android:layout_marginTop="@dimen/common_padding_small"
                    android:background="@color/custom_light_gray"
                    app:layout_constraintTop_toBottomOf="@id/tvAddAccountName" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivAddAccountName"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="@dimen/common_padding_x_small"
                    android:contentDescription="@string/empty_amount_field"
                    android:src="@drawable/text_box_edit_outline"
                    app:layout_constraintBottom_toBottomOf="@id/editTextAccountName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/editTextAccountName"
                    app:tint="@color/custom_text_gray_dark" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextAccountName"
                    style="@style/TitleFont"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common_padding_big"
                    android:layout_marginTop="@dimen/common_padding_large"
                    android:layout_marginEnd="@dimen/common_padding_x_small"
                    android:maxLength="50"
                    android:singleLine="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivAddAccountName"
                    app:layout_constraintTop_toBottomOf="@id/cvAddAccountDividerName" />

                <TextView
                    android:id="@+id/tvAddAccountType"
                    style="@style/BodyFontSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_padding_xlarge"
                    android:text="@string/account_type"
                    android:textAllCaps="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editTextAccountName" />

                <View
                    android:id="@+id/cvAddAccountDividerTop"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/common_padding_small"
                    android:background="@color/custom_light_gray"
                    app:layout_constraintTop_toBottomOf="@id/tvAddAccountType" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinAddAccountType"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:prompt="@string/account_type"
                    android:spinnerMode="dialog"
                    app:layout_constraintTop_toBottomOf="@id/cvAddAccountDividerTop" />

                <TextView
                    android:id="@+id/tvAddAccountCurrency"
                    style="@style/BodyFontSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_padding_big"
                    android:text="@string/currency"
                    android:textAllCaps="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/spinAddAccountType" />

                <View
                    android:id="@+id/cvAddAccountDividerCurrencyTop"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/common_padding_small"
                    android:background="@color/custom_light_gray"
                    app:layout_constraintTop_toBottomOf="@id/tvAddAccountCurrency" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinAddAccountCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:prompt="@string/currency"
                    android:spinnerMode="dialog"
                    app:layout_constraintTop_toBottomOf="@id/cvAddAccountDividerCurrencyTop" />

                <View
                    android:id="@+id/cvAddAccountDividerBottom"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/custom_light_gray"
                    app:layout_constraintTop_toBottomOf="@id/spinAddAccountCurrency" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <include layout="@layout/save_close_buttons" />
    </LinearLayout>
</ScrollView>
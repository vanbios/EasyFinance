<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardItemTransaction"
    style="?attr/materialCardViewElevatedStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/elevation_small"
    android:clickable="true"
    android:focusable="true"
    android:longClickable="true"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/common_padding_large"
        android:paddingTop="@dimen/common_padding_medium"
        android:paddingRight="@dimen/common_padding_large"
        android:paddingBottom="@dimen/common_padding_medium">

        <ImageView
            android:id="@+id/ivItemTransactionAccountType"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:contentDescription="@string/account_type"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_card_new_48dp" />

        <TextView
            android:id="@+id/tvItemTransactionAmount"
            style="@style/TitleFont"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_padding_large"
            android:singleLine="true"
            app:layout_constraintEnd_toStartOf="@id/barrierTransaction"
            app:layout_constraintStart_toEndOf="@id/ivItemTransactionAccountType"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="+ 5 000 000.98 hrn" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivItemTransactionCategory"
            android:layout_width="@dimen/icon_small"
            android:layout_height="@dimen/icon_small"
            android:contentDescription="@string/category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/colorOnSurface"
            tools:src="@drawable/cash_multiple" />

        <TextView
            android:id="@+id/tvItemTransactionAccountName"
            style="@style/SubheadFontSecondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/common_padding_large"
            android:singleLine="true"
            app:layout_constraintEnd_toStartOf="@id/barrierTransaction"
            app:layout_constraintStart_toStartOf="@id/tvItemTransactionAmount"
            app:layout_constraintTop_toBottomOf="@id/tvItemTransactionAmount"
            tools:text="@string/faq_about_app" />

        <TextView
            android:id="@+id/tvItemTransactionDate"
            style="@style/CaptionFontSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="10.03.2023" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="start"
            app:constraint_referenced_ids="tvItemTransactionDate, ivItemTransactionCategory" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/containerFrgNumericDialog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/cvNumericDialogDivider"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/cvNumericDialogDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="@dimen/common_padding_medium"
        android:layout_marginRight="5dp"
        android:background="@color/custom_light_gray"
        app:layout_constraintBottom_toTopOf="@id/layoutFrgNumericDialogButtons" />

    <LinearLayout
        android:id="@+id/layoutFrgNumericDialogButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/common_padding_small"
        android:paddingTop="@dimen/common_padding_small"
        android:paddingRight="@dimen/common_padding_small"
        android:paddingBottom="@dimen/common_padding_small"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/btnFrgNumericDialogCancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/text_view_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/cancel"
            android:textAllCaps="true"
            android:textColor="@color/custom_cyan_dark"
            android:textSize="@dimen/text_size_subhead" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/custom_light_gray" />

        <TextView
            android:id="@+id/btnFrgNumericDialogCommit"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/text_view_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/done"
            android:textAllCaps="true"
            android:textColor="@color/custom_cyan_dark"
            android:textSize="@dimen/text_size_subhead" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>